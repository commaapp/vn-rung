<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/dp10"
            android:src="@drawable/ic_ico_setting" />

        <TextView
            android:id="@+id/title_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/dp10"
            android:text="@string/app_name"
            android:textColor="@color/title_app"
            android:textSize="@dimen/tv_size_title_app"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_store"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/dp10"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_favorite" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_traitim" />

                <TextView
                    android:id="@+id/txtState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/start_massa"
                    android:textColor="@color/colorWhile"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_0"
                    android:onClick="onClick"
                    android:tag="1"
                    android:textColor="@color/color_text_main" />

                <Button
                    android:id="@+id/button2"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_margin="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/btn_1"
                    android:onClick="onClick"
                    android:tag="2"
                    android:textColor="@color/color_text_main" />

                <Button
                    android:id="@+id/button3"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_2"
                    android:onClick="onClick"
                    android:tag="3"
                    android:textColor="@color/color_text_main" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button4"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_3"
                    android:onClick="onClick"
                    android:tag="4"
                    android:textColor="@color/color_text_main" />

                <Button
                    android:id="@+id/button5"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_4"
                    android:onClick="onClick"
                    android:tag="5"
                    android:textColor="@color/color_text_main" />

                <Button
                    android:id="@+id/button6"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_5"
                    android:onClick="onClick"
                    android:tag="6"
                    android:textColor="@color/color_text_main" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
